{
	"name": "@pouchlab/lite-node",
	"version": "1.0.3",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "npm run test:integration && npm run test:unit",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"dev:server": "node --watch src/lib/demo.js"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/lib/demo.js"
	],
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^9.6.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.2.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"typescript": "^5.0.0",
		"vite": "^5.0.11",
		"vitest": "^2.0.0"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@pouchlab/liteq": "^1.1.0",
		"@pouchlab/realtor": "^2.0.2",
		"adm-zip": "^0.5.16",
		"deepmerge": "^4.3.1",
		"eventemitter3": "^5.0.1",
		"jimp": "^1.6.0",
		"msgpack-lite": "^0.1.26",
		"nanoid": "^5.0.7",
		"zod": "^3.23.8"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pouchlabs/pouchlite.git"
	},
	"keywords": [
		"db",
		"storage",
		"offline-first",
		"browser",
		"nodejs",
		"sync",
		"orm",
		"json",
		"files",
		"database",
		"nosql",
		"embeddable",
		"pouchdb",
		"couchdb"
	],
	"author": "pouchlabs",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/pouchlabs/pouchlite/issues"
	},
	"homepage": "https://pouchlite.top"
}
